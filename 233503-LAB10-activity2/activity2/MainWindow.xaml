<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Checkbox Example" Height="312" Width="765"
        Background="LightBlue">
    <StackPanel Margin="10">
        <CheckBox x:Name="checkBox1" Content="Checkbox 1" Checked="CheckBox1_Checked" Unchecked="CheckBox1_Unchecked" />
        <TextBox x:Name="textBox1" Margin="0,5,0,10" Height="30" IsReadOnly="True" />

        <CheckBox x:Name="checkBox2" Content="Checkbox 2" Checked="CheckBox2_Checked" Unchecked="CheckBox2_Unchecked" />
        <TextBox x:Name="textBox2" Margin="0,5,0,10" Height="30" IsReadOnly="True" />
    </StackPanel>
</Window>